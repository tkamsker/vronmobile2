# Uncomment this line to define a global platform for your project
# Updated to iOS 16.0 for RoomPlan framework support (Feature 014 - LiDAR Scanning)
platform :ios, '16.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end

  # Fix for Xcode 16 - GoogleUtilities header import style
  # Replace double-quoted includes with angle-bracketed includes in framework headers
  installer.pods_project.targets.each do |target|
    if target.name == 'GoogleUtilities' || target.name == 'integration_test'
      target.build_configurations.each do |config|
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      end
    end
  end

  # Fix GoogleUtilities umbrella header
  google_utilities_path = installer.sandbox.pod_dir('GoogleUtilities')
  if google_utilities_path && File.exist?(google_utilities_path)
    umbrella_header = File.join(google_utilities_path, 'GoogleUtilities', 'GoogleUtilities.h')
    if File.exist?(umbrella_header)
      text = File.read(umbrella_header)
      new_text = text.gsub(/"([^"]+\.h)"/, '<GoogleUtilities/\1>')
      File.write(umbrella_header, new_text) if text != new_text
    end
  end

  # Fix integration_test umbrella header for Xcode 16
  integration_test_umbrella = File.join(
    installer.sandbox.root,
    'Target Support Files',
    'integration_test',
    'integration_test-umbrella.h'
  )
  if File.exist?(integration_test_umbrella)
    text = File.read(integration_test_umbrella)
    new_text = text.gsub(/"([^"]+\.h)"/, '<integration_test/\1>')
    File.write(integration_test_umbrella, new_text) if text != new_text
  end
end
